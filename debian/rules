#!/usr/bin/make -f

# export DH_VERBOSE=1

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

%:
	dh $@

override_dh_auto_test:
	ok=true; \
	for i in $$(seq 3); do \
	  echo "Test Run $$i"; \
	  if env CTEST_OUTPUT_ON_FAILURE=1 dh_auto_test; \
	  then \
	    echo "success"; \
	  else \
	    echo "failure"; \
	    ok=false; \
	  fi; \
	done; \
	$${ok}
